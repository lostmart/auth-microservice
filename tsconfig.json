{
	"compilerOptions": {
		"target": "ES2022",
		"module": "Node16",
		"lib": ["ES2022"],
		"moduleResolution": "node16",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"noImplicitAny": false,
		"skipLibCheck": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"types": ["node", "jest"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "**/*.test.ts"]
}
